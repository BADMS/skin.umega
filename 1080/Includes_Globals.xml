    <!--date and time-->
    <include name="dateTime">
        <control type="group">
        <animation type="Conditional" condition="window.isvisible(4998)">
            <effect type="zoom" end="90" time="200" center="auto" tween="sine" easing="in"/>
        </animation>
            <posx>0</posx>
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>24-col</width>
                <font>pageTitle</font>
                <label>$INFO[System.Time(hh:mm)]</label>
                <textcolor>selected</textcolor>
            </control>
            <control type="label">
                <posx>0</posx>
                <posy>45</posy>
                <width>24-col</width>
                <font>regular</font>
                <label>$INFO[System.Date(mmm d)]</label>
                <textcolor>selected</textcolor>
            </control>
        </control>
    </include>
    <!--busy indicator-->
    <include name="loadingIndicator">
