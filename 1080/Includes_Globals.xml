                <height>50</height>
                <aspectratio>keep</aspectratio>
                <texture border="0">busy.gif</texture>
                <bordertexture border="0">-</bordertexture>
                <colordiffuse>99FFFFFF</colordiffuse>
            </control>
        </control>
    </include>
