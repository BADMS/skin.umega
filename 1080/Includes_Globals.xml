<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!--modal dialogs-->
    <include name="modalDialog">
        <control type="image">
            <include>FullScreenScaled</include>
            <texture>colors/black.png</texture>
            <colordiffuse>eeFFFFFF</colordiffuse>
            <aspectratio>stretch</aspectratio>
        </control>
        <control type="image">
            <include>FullScreenScaled</include>
            <texture>backgrounds/vignette.png</texture>
            <colordiffuse>ffffffff</colordiffuse>
            <aspectratio>stretch</aspectratio>
        </control>
    </include>
	<include name="BGHomeList">
		<include>FullScreenScaled</include>
		<fadetime>1000</fadetime>
		<animation effect="fade" start="30" end="100" time="400" delay="0">Visible</animation>
		<animation effect="fade" start="100" end="30" time="400" delay="0">Hidden</animation>
	</include>
    <!--Global background-->
    <include name="globalBackground">
        <!--Preview window-->
        <control type="group">
            <visible>Player.HasVideo</visible>
            <control type="videowindow">
                <include>FullScreenScaled</include>
            </control>
            <control type="image">
                <include>FullScreenScaled</include>
                <texture>colors/black.png</texture>
                <colordiffuse>77FFFFFF</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
        </control>
        <control type="group">
			<!--visualisation--blowsup-viz-settings-ofc.sigh-->
            <visible>[Player.HasAudio + !Skin.HasSetting(disableVizBg)]</visible>
			<control type="visualisation" id="2">
				<description>visualisation</description>
				<posx>0</posx>
				<posy>0</posy>
				<include>FullScreenScaled</include>
			</control>
		</control>
        <control type="group">
            <visible>!Player.HasVideo | [Player.HasAudio + Skin.HasSetting(disableVizBg)]</visible>
            <visible>![Player.HasAudio + !Skin.HasSetting(disableVizBg)]</visible>
            <control type="image">
                <include>FullScreenScaled</include>
                <texture>colors/black.png</texture>
                <colordiffuse>ffFFFFFF</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <!--default background-->
            <control type="image">
                <visible>!Skin.HasSetting(useGlobalFanartBackground) + isempty(skin.string(globalBackground))</visible>
                <include>FullScreenScaled</include>
                <texture>backgrounds/background001.jpg</texture>
                <colordiffuse>6affffff</colordiffuse>
                <aspectratio>stretch</aspectratio>
                <animation effect="fade" start="0" end="100" time="1000" condition="window.previous(home)">windowopen</animation>
            </control>
            <!--User setting: global background override-->
            <control type="image">
                <visible>!Skin.HasSetting(useGlobalFanartBackground) + !isempty(skin.string(globalBackground))</visible>
                <include>FullScreenScaled</include>
                <texture>$INFO[skin.string(globalBackground)]</texture>
                <colordiffuse>6Affffff</colordiffuse>
                <aspectratio>stretch</aspectratio>
                <animation effect="fade" start="0" end="100" time="1000" condition="window.previous(home)">windowopen</animation>
            </control>
            <!--User setting: rolling fanart slides-->
            <control type="multiimage">
                <visible>Skin.HasSetting(useGlobalFanartBackground) + !container.content(seasons) + !container.content(songs) + [!container.content(episodes) | Substring(Container.folderpath,plugin)]</visible>
                <posx>0</posx>
                <posy>0</posy>
                <include>FullScreenScaled</include>
                <imagepath>$VAR[fanartType]</imagepath>
                <timeperimage>25000</timeperimage>
                <fadetime>1000</fadetime>
                <pauseatend>10000</pauseatend>
                <randomize>true</randomize>
                <aspectratio>stretch</aspectratio>
                <colordiffuse>6affffff</colordiffuse>
                <animation type="windowopen">
                    <effect type="fade" start="0" end="100" time="500" delay="400"/>
                </animation>
                <animation type="windowclose">
                    <effect type="fade" start="100" end="0" time="300"/>
                </animation>
            </control>
            <!--show media fanart in relevant sections-->
            <control type="group">
                <visible>Skin.HasSetting(useGlobalFanartBackground)</visible>
                <animation type="visible" reversible="false">
                    <effect type="fade" start="0" end="100" time="500" delay="400"/>
                </animation>
                <control type="image">
                    <include>FullScreenScaled</include>
                    <texture>colors/black.png</texture>
                    <colordiffuse>FFFFFFFF</colordiffuse>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="image">
					<fadetime>400</fadetime>
                    <include>FullScreenScaled</include>
                    <texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
                    <colordiffuse>6affffff</colordiffuse>
                    <aspectratio>stretch</aspectratio>
                </control>
                <control type="largeimage">
					<fadetime>400</fadetime>
                    <include>FullScreenScaled</include>
                    <colordiffuse>6affffff</colordiffuse>
                    <aspectratio>stretch</aspectratio>
					<texture background="true">backgrounds/earth.png</texture>
					<visible>Skin.String(SectionType,sharedcontent)</visible>
                </control>
            </control>
			<control type="group">
				<visible>Skin.String(SectionType,playlists)</visible>
					<animation type="visible" reversible="false">
				<effect type="fade" start="0" end="100" time="500" delay="400"/>
				</animation>
				<control type="largeimage">
					<posx>0</posx>
					<posy>0</posy>
					<width>fullscreenWidth</width>
					<height>fullscreenHeight</height>
					<fadetime>400</fadetime>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.CompositeImage(width=1280;height=720;cols=6;rows=2)]</texture>			
					<include condition="!Skin.HasSetting(disableAnimateFanart)">kenBurnsey</include>
				</control>
			</control>
			<control type="group">
				<visible>Skin.String(SectionType,playqueue) + stringcompare(Container.FirstTitle,My Queue)</visible>
